#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "üöÄ Ejecutando validaciones pre-push..."

# Verificar que no haya cambios sin commitear
if [ -n "$(git status --porcelain)" ]; then
    echo "‚ùå Hay cambios sin commitear. Haz commit de todos los cambios antes de hacer push."
    exit 1
fi

# Verificar que est√©s en la rama correcta (opcional)
current_branch=$(git branch --show-current)
if [ "$current_branch" != "develop" ] && [ "$current_branch" != "main" ]; then
    echo "‚ö†Ô∏è  Est√°s en la rama '$current_branch'. Aseg√∫rate de que sea la rama correcta."
fi

echo "‚úÖ Validaciones pre-push completadas. Push permitido." 